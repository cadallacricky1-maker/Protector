<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#000000">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:boxedEdges="all">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <!-- App Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROTECTOR"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp" />

            <!-- Status -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚠️ INACTIVE"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#999999"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#333333"
                android:layout_marginBottom="16dp" />

            <!-- Last Alert Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LAST ALERT"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_marginBottom="8dp" />

            <!-- Last Alert Message -->
            <TextView
                android:id="@+id/tvLastAlert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No alerts yet"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <!-- Alert Time -->
            <TextView
                android:id="@+id/tvAlertTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textColor="#666666"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#333333"
                android:layout_marginBottom="16dp" />

            <!-- Body Sensor Status -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BODY DETECTION"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvBodySensorStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Initializing..."
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Info Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monitoring from phone"
                android:textSize="11sp"
                android:textColor="#666666"
                android:gravity="center"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </ScrollView>

</androidx.wear.widget.BoxInsetLayout>
